{% extends "UcsEventFlowAnalyserBundle::layout.html.twig" %}

{% block title "UCS Event Flow Analyser: All Events" %}

{% block article %}
    <article>
        <div class="col-1-2">
            <ul>
                {% for event in events|slice(0,(events|length)/2) %}
                    <li><a href="/events/event/{{ event|e }}">{{ event|e }}</a></li>
                {% endfor %}
            </ul>
        </div>
        <div class="col-1-2">
            <ul>
                {% for event in events|slice((events|length)/2) %}
                    <li><a href="/events/event/{{ event|e }}">{{ event|e }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </article>
{% endblock %}
