<script type="text/javascript">
    <!-- Bootstrap JS -->
    prettyPrint();
    <!-- change the svg width for graphs-->
    
    if (shape = document.getElementsByTagName("svg")[0]) {
        shape.removeAttribute('viewBox');
        $('svg').svgPan('viewport');
        $('svg').width('100%');
        $('svg').height('100%');
    }
    
    $('*[rel="svg"]').live('click', function(e) {
        e.preventDefault();
        win = window.open($(this).attr("href"), '_blank', 'location=no, menubar=no, resizable=no, scrollbars=no, status=no, titlebar=no, toolbar=no, top=0, left=0, width=' + screen.width + ', height=' + screen.height);
    });
    
    $('*[rel="popup"]').live('click', function(e) {
        e.preventDefault();
        $('#modal-process').find('h3').html($(this).attr("title"));
        $('#modal-link').attr("href", $(this).attr("href"));
        $('#modal-link').attr("download", $(this).attr("title"));
        $.get(this.href, 
    	    function(data) {
              	$('#modal-content').text(data).html();
            },
            "text"
            )
        .complete(function(){ 
        	prettyPrint();
            $('#modal-process').modal('show');
        });
    });
    $("*[rel=tooltip-right]").tooltip( {
        animation:true,
        placement: "right"
        });
    $("*[rel=tooltip-left]").tooltip( {
        animation:true,
        placement: "left"
        });
    $("*[rel=tooltip-top]").tooltip( {
        animation:true,
        placement: 'top'
        });
    $("*[rel=tooltip-bottom]").tooltip( {
        animation:true,
        placement: 'bottom'
        });
</script>
