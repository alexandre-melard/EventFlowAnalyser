<script type="text/javascript">
    <!-- Bootstrap JS -->
    prettyPrint();
    
    $('*[rel="popup"]').live('click', function(e) {
        e.preventDefault();
        $('#modal-process').find('h3').html($(this).attr("title"));
        $('#modal-link').attr("href", $(this).attr("href"));
        $('#modal-link').attr("download", $(this).attr("title"));
        $.get(this.href, 
    	    function(data) {
              	$('#modal-content').text(data).html();
            },
            "text"
            )
        .complete(function(){ 
        	prettyPrint();
            $('#modal-process').modal('show');
        });
    });
    $("*[rel=tooltip-right]").tooltip( {
        animation:true,
        placement: "right"
        });
    $("*[rel=tooltip-left]").tooltip( {
        animation:true,
        placement: "left"
        });
    $("*[rel=tooltip-top]").tooltip( {
        animation:true,
        placement: 'top'
        });
</script>
